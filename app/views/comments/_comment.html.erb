<ul>
  <% @comments.each do |comment| %>
    <% if comment.id.present? %>
      <li>
        <p><br><%= comment.content %><br>
        <% if user_signed_in? && current_user.id == comment.post.user_id  %>
        <%= link_to "delete", [comment.post, comment], method: :delete, class:"genric-btn danger-border circle" %>
        <%= link_to "edit ", edit_post_comment_path(comment.post, comment), class:"genric-btn success-border circle" %></p>
        </li>
        <% end %>
    <% end %>
  <% end %>
<%= render 'comments/form'%>
</ul>