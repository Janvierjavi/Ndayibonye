<p id="notice"><%= notice %></p>

<div class="row "> 

<%= link_to 'New Post', new_post_path, class:'' %>
<%=search_form_for @search do |f| %>                     
    <div class="input-group">
    <%= f.text_field :content_or_categories_cont, class:'form-control ' %>
     <%= f.submit  %> 
</div>
 <% end %> </div>

  <div class="card-columns mt-2">
  
  <% @posts.each do |post| %> 
  <div class="card">
  <%= image_tag(post.image , class:'card-img-top', style: "max-height: 18rem;" ) if post.image.attached? %>
  
  <div class="card-body">
    <h5 class="card-title">Cat:<%= post.categories %></h5>
    <p class="card-text">
    <%= post.content %> </p>
                        <%= link_to 'Show', post %>
                        <%= link_to 'Edit', edit_post_path(post) %>
                        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
  <div class="card-footer ">
    <small class="text-muted">Last updated 3 mins ago</small>
  </div>
</div>
<% end %>
  </div>
